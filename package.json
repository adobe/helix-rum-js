{
  "name": "@adobe/helix-rum-js",
  "version": "1.0.1",
  "description": "Helix RUM JS",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "test": " c8 mocha",
    "test-ci": "c8 --check-coverage=no mocha && codecov",
    "lint": "eslint .",
    "docs": "npx jsdoc2md -c .jsdoc.json --files 'src/*.js'  > docs/API.md",
    "semantic-release": "semantic-release",
    "commit": "git-cz",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/helix-rum-js"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/adobe/helix-rum-js/issues"
  },
  "homepage": "https://github.com/adobe/helix-rum-js#readme",
  "mocha": {
    "require": "test/setup-env.js",
    "recursive": "true",
    "reporter": "mocha-multi-reporters",
    "reporter-options": "configFile=.mocha-multi.json"
  },
  "devDependencies": {
    "@adobe/eslint-config-helix": "2.0.2",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/npm": "10.0.3",
    "c8": "7.14.0",
    "codecov": "3.8.3",
    "commitizen": "4.3.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.42.0",
    "husky": "8.0.3",
    "jsdoc-to-markdown": "8.0.0",
    "junit-report-builder": "3.0.1",
    "lint-staged": "13.2.2",
    "mocha": "10.2.0",
    "mocha-multi-reporters": "1.5.1",
    "semantic-release": "21.0.3"
  },
  "lint-staged": {
    "*.js": "eslint",
    "*.cjs": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
